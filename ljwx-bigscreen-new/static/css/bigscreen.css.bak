/* 大屏专用样式文件 */

/* 消息面板样式 */
.message-panel {
    position: relative;
}

.message-panel .panel-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 10px 15px;
    background: rgba(0, 21, 41, 0.8);
    border-bottom: 1px solid rgba(0, 228, 255, 0.3);
}

.message-panel .panel-header span:first-child {
    color: #00e4ff;
    font-size: 16px;
    font-weight: 600;
}

.message-count {
    background: rgba(0, 228, 255, 0.2);
    color: #00e4ff;
    padding: 4px 12px;
    border-radius: 12px;
    font-size: 12px;
    font-weight: bold;
    border: 1px solid rgba(0, 228, 255, 0.4);
    animation: pulse 2s infinite;
}

@keyframes pulse {
    0%, 100% { transform: scale(1); opacity: 1; }
    50% { transform: scale(1.05); opacity: 0.8; }
}

.message-list {
    height: 100%;
    overflow: hidden;
    position: relative;
}

.message-container {
    animation: scrollMessages 15s linear infinite;
}

@keyframes scrollMessages {
    0% { transform: translateY(100%); }
    100% { transform: translateY(-100%); }
}

.message-item {
    padding: 8px 12px;
    margin-bottom: 6px;
    background: rgba(0, 21, 41, 0.6);
    border-left: 3px solid #00e4ff;
    border-radius: 4px;
    cursor: pointer;
    transition: all 0.3s ease;
}

.message-item:hover {
    background: rgba(0, 228, 255, 0.1);
    transform: translateX(5px);
}

.message-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 4px;
}

.message-sender {
    color: #00e4ff;
    font-size: 11px;
    font-weight: 600;
}

.message-time {
    color: rgba(255, 255, 255, 0.6);
    font-size: 10px;
}

.message-content {
    color: #fff;
    font-size: 11px;
    line-height: 1.4;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.message-priority {
    padding: 2px 6px;
    border-radius: 8px;
    font-size: 9px;
    font-weight: bold;
    margin-left: 8px;
}

.priority-high {
    background: rgba(255, 68, 68, 0.2);
    color: #ff4444;
    border: 1px solid rgba(255, 68, 68, 0.4);
}

.priority-medium {
    background: rgba(255, 187, 0, 0.2);
    color: #ffbb00;
    border: 1px solid rgba(255, 187, 0, 0.4);
}

.priority-low {
    background: rgba(0, 255, 157, 0.2);
    color: #00ff9d;
    border: 1px solid rgba(0, 255, 157, 0.4);
}

.no-messages {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    height: 100%;
    color: rgba(255, 255, 255, 0.5);
}

.no-messages-icon {
    font-size: 24px;
    margin-bottom: 8px;
}

/* 设备面板样式 */
.device-panel {
    position: relative;
}

.device-panel .panel-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 10px 15px;
    background: rgba(0, 21, 41, 0.8);
    border-bottom: 1px solid rgba(0, 228, 255, 0.3);
}

.device-panel .panel-header span:first-child {
    color: #00e4ff;
    font-size: 16px;
    font-weight: 600;
}

.device-stat-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
}

.device-stat-value {
    color: #00e4ff;
    font-size: 14px;
    font-weight: bold;
}

.device-stat-label {
    color: rgba(255, 255, 255, 0.8);
    font-size: 10px;
    margin-top: 2px;
}

.device-stats-overview {
    display: flex;
    justify-content: space-around;
    padding: 10px;
    background: rgba(0, 21, 41, 0.4);
    margin-bottom: 10px;
    border-radius: 6px;
}

.device-quick-stats {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 8px;
    margin-bottom: 10px;
    height: 50px;
}

.device-quick-stat {
    background: rgba(0, 228, 255, 0.1);
    border-radius: 4px;
    padding: 6px;
    text-align: center;
    border-left: 3px solid #00e4ff;
    cursor: pointer;
    transition: all 0.3s ease;
}

.device-quick-stat:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 8px rgba(0, 228, 255, 0.3);
}

.device-quick-stat.charging {
    background: rgba(255, 187, 0, 0.1);
    border-left-color: #ffbb00;
}

.device-quick-stat.offline {
    background: rgba(255, 68, 68, 0.1);
    border-left-color: #ff4444;
}

.device-charts-container {
    display: flex;
    gap: 10px;
    height: 200px;
}

.device-chart {
    flex: 1;
    background: rgba(0, 21, 41, 0.3);
    border-radius: 6px;
    border: 1px solid rgba(0, 228, 255, 0.2);
    transition: all 0.3s ease;
    cursor: pointer;
}

.device-chart:hover {
    border-color: #00e4ff;
    box-shadow: 0 0 10px rgba(0, 228, 255, 0.3);
}

/* 弹窗样式 */
.modal-overlay {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.8);
    z-index: 1000;
    display: flex;
    align-items: center;
    justify-content: center;
}

.modal-content {
    background: rgba(0, 21, 41, 0.95);
    border: 1px solid #00e4ff;
    border-radius: 8px;
    padding: 20px;
    max-width: 500px;
    color: #fff;
    position: relative;
}

.modal-header {
    color: #00e4ff;
    margin-bottom: 15px;
    font-size: 18px;
    font-weight: 600;
}

.modal-body p {
    margin-bottom: 10px;
    line-height: 1.5;
}

.modal-body strong {
    color: #00e4ff;
}

.modal-close-btn {
    margin-top: 15px;
    padding: 8px 16px;
    background: #00e4ff;
    color: #000;
    border: none;
    border-radius: 4px;
    cursor: pointer;
    font-weight: 600;
    transition: all 0.3s ease;
}

.modal-close-btn:hover {
    background: #00b8cc;
    transform: translateY(-1px);
}

/* 统计概览样式 */
.stats-overview {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 10px;
    padding: 8px 12px;
    background: rgba(0, 228, 255, 0.1);
    border-radius: 6px;
    border-left: 4px solid #00e4ff;
}

.stats-group {
    display: flex;
    align-items: center;
    gap: 20px;
}

.stat-item {
    text-align: center;
}

.stat-value {
    color: #00e4ff;
    font-size: 18px;
    font-weight: bold;
}

.stat-label {
    color: rgba(255, 255, 255, 0.8);
    font-size: 11px;
}

.stat-value.green { color: #00ff9d; }
.stat-value.yellow { color: #ffbb00; }
.stat-value.red { color: #ff4444; }

.view-details {
    color: rgba(255, 255, 255, 0.6);
    font-size: 12px;
    cursor: pointer;
    transition: color 0.3s ease;
}

.view-details:hover {
    color: #00e4ff;
}

/* 快速统计卡片 */
.quick-stats {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 6px;
    margin-bottom: 10px;
    height: 45px;
}

.quick-stat {
    background: rgba(0, 228, 255, 0.1);
    border-radius: 4px;
    padding: 4px;
    text-align: center;
    border-left: 3px solid #00e4ff;
    cursor: pointer;
    transition: all 0.3s ease;
}

.quick-stat:hover {
    transform: translateY(-2px);
    box-shadow: 0 2px 6px rgba(0, 228, 255, 0.3);
}

.quick-stat.green {
    background: rgba(0, 255, 157, 0.1);
    border-left-color: #00ff9d;
}

.quick-stat.yellow {
    background: rgba(255, 187, 0, 0.1);
    border-left-color: #ffbb00;
}

.quick-stat.red {
    background: rgba(255, 68, 68, 0.1);
    border-left-color: #ff4444;
}

.quick-stat-value {
    color: #00e4ff;
    font-size: 14px;
    font-weight: bold;
}

.quick-stat.green .quick-stat-value { color: #00ff9d; }
.quick-stat.yellow .quick-stat-value { color: #ffbb00; }
.quick-stat.red .quick-stat-value { color: #ff4444; }

.quick-stat-label {
    color: #fff;
    font-size: 9px;
}

/* 图表容器 */
.charts-container {
    display: flex;
    gap: 10px;
    height: 180px;
}

.chart-container {
    flex: 1;
    background: rgba(0, 21, 41, 0.3);
    border-radius: 6px;
    border: 1px solid rgba(0, 228, 255, 0.2);
    transition: all 0.3s ease;
    cursor: pointer;
}

.chart-container:hover {
    border-color: #00e4ff;
    box-shadow: 0 0 10px rgba(0, 228, 255, 0.3);
}

/* 响应式设计 */
@media (max-width: 1200px) {
    .quick-stats {
        grid-template-columns: repeat(2, 1fr);
        height: 90px;
    }
    
    .charts-container {
        flex-direction: column;
        height: 360px;
    }
}

/* 动画效果 */
@keyframes fadeIn {
    from { opacity: 0; transform: translateY(20px); }
    to { opacity: 1; transform: translateY(0); }
}

.fade-in {
    animation: fadeIn 0.5s ease-out;
}

/* 滚动条样式 */
.message-list::-webkit-scrollbar {
    width: 4px;
}

.message-list::-webkit-scrollbar-track {
    background: rgba(0, 21, 41, 0.3);
}

.message-list::-webkit-scrollbar-thumb {
    background: rgba(0, 228, 255, 0.5);
    border-radius: 2px;
}

.message-list::-webkit-scrollbar-thumb:hover {
    background: rgba(0, 228, 255, 0.8);
} 